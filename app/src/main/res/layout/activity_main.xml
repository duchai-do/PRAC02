<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Result!"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:padding="8dp" />

    <!-- TextView để hiển thị trạng thái với chữ đỏ -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa nhập dữ liệu"
        android:textColor="@android:color/holo_red_dark"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etStaffId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff id" />

    <EditText
        android:id="@+id/etStaffName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff full name" />

    <EditText
        android:id="@+id/etBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birth date" />

    <EditText
        android:id="@+id/etSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salary"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAddStaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Staff"
        android:layout_gravity="center"
        android:padding="8dp"
        android:backgroundTint="@android:color/holo_purple"
        android:textColor="@android:color/white"/>
</LinearLayout>
